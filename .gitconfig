[core]
	editor = emacs
	page = "lv -c"

[user]
	name = Toru Tamura
	email = torut@ttsoft.jp

[alias]
	br = branch
	co = checkout
	ci = commit
	st = status -sb
	di = diff
	di-cached = diff --cached
	ps = push
	pl = pull
	history = log --graph --date=short --decorate=short --pretty=format:'%x09%Cgreen%h %Creset%C(cyan)%cd %Creset%cn %Cred%d %Creset%C(white bold)%s'
	h = log --graph --date=short --decorate=short --pretty=format:'%x09%Cgreen%h %Creset%C(cyan)%cd %Creset%cn %Cred%d %Creset%C(white bold)%s'
	history-stat = log --graph --decorate --pretty=format:'%C(cyan)%ad %Creset[%cn] %Cgreen<%h>%Creset%n%Cred%d%Creset%n%C(white bold)%s%Creset%n' --stat
	hs = log --graph --decorate --pretty=format:'%C(cyan)%ad %Creset[%cn] %Cgreen<%h>%Creset%n%Cred%d%Creset%n%C(white bold)%s%Creset%n' --stat
	export = archive --format=tar HEAD
	cherry-pick = cherry-pick --no-commit
	svn-up = svn rebase
	svn-commit = svn dcommit
	svn-ci = svn dcommit
	l = log --date=iso --format=medium
	ls = log --name-status
	lstat = log --stat
	develop = checkout develop
	master = checkout master
	add-update = add -u
	s = show
	ad = add
	up = pull --rebase

[http]
	sslVerify = false

[color]
	ui = auto
	status = auto
	diff = auto
	branch = auto
	interactive = auto
	grep = auto

[pull]
	rebase = true

[push]
	default = simple
