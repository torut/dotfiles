[core]
	editor = emacs
	page = "lv -c"

[user]
	name = Toru Tamura
	email = torut@ttsoft.jp

[alias]
	br = branch
	co = checkout
	ci = commit
	st = status -sb
	di = diff
	di-cached = diff --cached
	ps = push
	pl = pull
	history = log --graph --date=short --decorate=short --pretty=format:'%Cgreen%h %Creset%cd %cn %Cred%d %Creset%s'
	h = log --graph --date=short --decorate=short --pretty=format:'%Cgreen%h %Creset%cd %cn %Cred%d %Creset%s'
	export = archive --format=tar HEAD
	cherry-pick = cherry-pick --no-commit
	svn-up = svn rebase
	svn-commit = svn dcommit
	svn-ci = svn dcommit
	l = log --date=iso --format=medium
	ls = log --name-status
	develop = checkout develop
	master = checkout master

[http]
	sslVerify = false

[color]
	ui = auto

[pull]
	rebase = true

[push]
	default = simple
